<fieldset data-role="controlgroup" data-theme="b">
    <label for="customer-file-username" class="ui-hidden-accessible">Username</label><input data-theme="b" id="customer-file-username" type="text" name="username" value="Administrator" placeholder="Username"/>
    <label for="customer-file-password" class="ui-hidden-accessible">Password</label><input id="customer-file-password" type="password" name="password" placeholder="Password"/>
</fieldset>
<div class="myob-button">
    <input type="button" data-theme="a" id="customer-file-login-submit" value="Login"/>
</div>
<div id="customer-file-login-fail-message" data-role="popup" data-overlay-theme="a">
    <p>The username or password you entered is incorrect</p>
</div>
<div id="customer-file-login-error-message" data-role="popup" data-overlay-theme="b">
    <p>We can't confirm your details at the moment, try again shortly</p>
</div>
