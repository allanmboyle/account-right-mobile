<div data-role="header"><h1><%= title %></h1></div>
<div data-role="content">
    <fieldset data-role="controlgroup">
        <label for="<%= type %>_username" class="ui-hidden-accessible">Username</label><input id="<%= type %>_username" type="text" name="username" placeholder="Username"/>
        <label for="<%= type %>_password" class="ui-hidden-accessible">Password</label><input id="<%= type %>_password" type="password" name="password" placeholder="Password"/>
        <a id="<%= type %>_login_submit" data-role="button" href="#">Login</a>
        <div id="<%= type %>_login_fail_message" data-role="popup" data-overlay-theme="a">
            <p>The username or password you entered is incorrect</p>
        </div>
        <div id="<%= type %>_login_error_message" data-role="popup" data-overlay-theme="a">
            <p>We can't confirm your details at the moment, try again shortly</p>
        </div>
    </fieldset>
</div>
<div data-role="footer"><h1>Footer</h1></div>
