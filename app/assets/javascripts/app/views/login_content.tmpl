<fieldset data-role="controlgroup" data-theme="b">
    <label for="<%= type %>_username" class="ui-hidden-accessible">Username</label><input data-theme="b" id="<%= type %>_username" type="text" name="username" placeholder="Email Address"/>
    <label for="<%= type %>_password" class="ui-hidden-accessible">Password</label><input id="<%= type %>_password" type="password" name="password" placeholder="Password"/>
</fieldset>
<div class="myob-button">
    <input type="button" data-theme="a" id="<%= type %>_login_submit" data-role="button" value="Login"/>
    <input type="button" data-theme="b" id="<%= type %>_forgot_password" data-role="button" value="Forgot Password"/>
</div>
<div id="<%= type %>_login_fail_message" data-role="popup" data-overlay-theme="a">
    <p>The username or password you entered is incorrect</p>
</div>
<div id="<%= type %>_login_error_message" data-role="popup" data-overlay-theme="b">
    <p>We can't confirm your details at the moment, try again shortly</p>
</div>
